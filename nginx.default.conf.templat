server {
  listen 80;
  server_name _;

  root /usr/share/nginx/html;
  index index.html;

  # assets statiques
  location /assets/ {
    try_files $uri =404;
    access_log off;
    expires 30d;
  }

  # Proxy API (URL inject√©e via variable d'env)
  location /api/ {
    proxy_pass ${API_ORIGIN}/;   # ex: https://votre-api.up.railway.app/
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
  }

  # SPA fallback
  location / {
    try_files $uri /index.html;
  }
}
